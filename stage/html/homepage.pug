- var pageTitle = 'Homepage';
<!doctype html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        include pug/layout/styles.pug
        title #{pageTitle}
    body 
        .page.home-page 
            include pug/layout/sidebar
            .content-area 
                include pug/layout/header 
                .content
                    h2 #{pageTitle}
        include pug/layout/scripts